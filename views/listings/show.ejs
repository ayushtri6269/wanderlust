<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing)  %>;
</script>
<div class="container-fluid px-3 px-md-4">
  <div class="row mt-3">
    <!-- Title -->
    <div class="col-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3">
      <h3 class="text-center text-lg-start"><%= listing.title %></h3>
    </div>

    <!-- Listing Card -->
    <div class="col-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 mb-4">
      <div class="card show-card listing-card">
        <img
          src="<%= listing.image.url %>"
          alt="listing_image"
          class="card-img-top show-img"
        />
        <div class="card-body mb-3">
          <p>
            <i>Owned By</i>&nbsp;&nbsp;<b><%= listing.owner.username %></b><br>
            <%= listing.description %><br/>
            &#8377; <%= listing.price.toLocaleString("en-IN") %><br/>
            <%= listing.location %><br/>
            <%= listing.country %>
          </p>
        </div>

        <% if (currentUser && listing.owner._id.equals(currentUser._id)) { %>
          <div class="show-btns text-center mb-3">
            <div class="d-flex justify-content-center flex-wrap gap-2">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">
                Edit
              </a>
              <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
                <button class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mb-3">
      <%  if(currentUser) { %>
      <hr/>
      <h4 class="text-center">Leave a Review</h4>
      <form class="needs-validation" action="/listings/<%= listing._id %>/reviews" method="POST" novalidate>
        <div class="mb-3 mt-3">
          <label class="form-label" for="rating">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3 mt-3">
          <label class="form-label" for="comment">Comments</label>
          <textarea
            id="comment"
            class="form-control"
            name="review[comment]"
            cols="30"
            rows="5"
            required>
          </textarea>
          <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-dark" type="submit">Submit</button>
      </form>
      <hr/>
      <% } %>

      <!-- All Reviews -->
      <% if(listing.reviews.length > 0 ) { %>
        <div class="row g-3">
          <div class="col-12">
            <p><b>All Reviews</b></p>
          </div>
          <% for(let review of listing.reviews) { %>
            <div class="col-12 col-sm-6 col-lg-4">
              <div class="card h-100 shadow-sm p-3 text-center d-flex align-items-center justify-content-center">
                <div class="card-body">
                  <h5 class="card-title"><%= review.author.username %></h5>
                  <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                  <p class="card-text"><b><%= review.comment %></b></p>
                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-outline-dark">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% } %>
    </div>

    <!-- Map Section -->
    <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mb-3">
      <h3 class="text-center text-lg-start">Where you'll be</h3>
      <div id="map"></div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
